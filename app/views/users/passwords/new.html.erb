<div class="container p-5">
  <div class="row">
    <div class="col-md-12">

      <h5><%= t('devise_links.forgot_password') %></h5>

      <%= form_with model: resource, url: password_path(resource_name), local: true do |f| %>
        <%= render "shared/error_messages", resource: resource %>

        <div class="field mt-3">
          <%= f.label :email, class: "translatable-text" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-50" %>
        </div>

        <div class="actions mt-3">
          <%= button_tag(type: 'submit', class: "btn btn-success translatable-text") do %>
            <%= t('devise_links.send_reset_password_instructions') %>
          <% end %>
        </div>
      <% end %>

      <%= render "shared/links" %>

    </div>
  </div>
</div>
