<!-- app/views/devise/registrations/edit.html.erb -->
<div class="container-fluid light-blue-container p-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2 class="mb-4"><%= t('edit_user.title') %></h2>
      <%= form_with(model: @user, url: registration_path(resource_name), local: true, html: { class: 'needs-validation', novalidate: true }) do |f| %>
        <%= render "shared/error_messages", resource: @user %>

        <div class="form-group">
          <%= f.label :image, class: 'form-label' %><br/>
          <%= f.file_field :image, id: "image-upload", onchange: "updateImage(this);", class: 'form-control' %>
          <% if @user.image? %>
            <%= image_tag @user.image.url, class: 'icon_image', id: 'preview-image' %>
          <% else %>
            <%= image_tag 'default_image.png', class: 'icon_image', alt: 'Default Image', id: 'preview-image' %>
          <% end %>
        </div><br />

        <div class="form-group">
          <%= f.label :name, class: 'form-label' %><br />
          <%= f.text_field :name, class: 'form-control' %>
        </div><br />

        <div class="form-group">
          <%= f.label :prefecture_id, class: 'form-label' %><br />
          <%= f.collection_select :prefecture_id, @prefectures, :id, :name, { prompt: '選択してください' }, { class: 'form-select' } %>
        </div><br />

        <div class="form-group">
          <%= f.label :second_prefecture_id, class: 'form-label' %><br />
          <%= f.collection_select :second_prefecture_id, @prefectures, :id, :name, { prompt: '選択してください' }, { class: 'form-select' } %>
        </div><br />

        <div class="form-group">
          <%= f.label :constitution_id, class: 'form-label' %><br />
          <%= f.collection_select :constitution_id, @constitutions, :id, :name, { prompt: '選択してください' }, { class: 'form-select' } %>
        </div><br />

        <div class="form-group">
          <%= f.submit t('edit_user.update'), class: 'btn btn-primary' %>
        </div><br />
      <% end %>

      <h3 class="mt-4"><%= t('edit_user.cancel_account') %></h3><br />

      <div><%= t('edit_user.unhappy') %> </br>
        <%= link_to t('edit_user.cancel_account_button'), cancel_account_user_path, class: 'btn btn-danger' %>
      </div>
      <br />

      <%= link_to "トップページへ戻る", root_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>