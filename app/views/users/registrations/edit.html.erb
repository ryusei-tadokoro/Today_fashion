<h2><%= t('edit_user.title') %></h2>

<%= form_with(model: resource, url: registration_path(resource_name), local: true) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div><br />

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div><br />

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('edit_user.currently_waiting_confirmation', email: resource.unconfirmed_email) %></div>
  <% end %><br />

  <div class="field">
    <%= f.label :password %> <i>(<%= t('edit_user.leave_blank') %>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t('edit_user.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %>
  </div><br />

   <div class="field">
    <%= f.label :password_confirmation %> <i>(新しく入力したパスワードを入れてください)</i><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div><br />

  <div class="field">
    <%= f.label :current_password %> <i>(<%= t('edit_user.current_password_confirmation') %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div><br />
  

  <div class="actions">
    <%= f.submit t('edit_user.update') %>
  </div><br />
<% end %>

<h3><%= t('edit_user.cancel_account') %></h3><br />

<div><%= t('edit_user.unhappy') %> <%= button_to t('edit_user.cancel_account_button'), registration_path(resource_name), data: { confirm: t('edit_user.confirmation_message'), turbo_confirm: t('edit_user.confirmation_message') }, method: :delete %></div>
<br />
<%= link_to t('edit_user.back'), root_path, class: 'nav-link' %>

