<h2>Sign up</h2>

<%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %> <br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :residence %><br />
    <%= f.select :residence_name, Residence.residence_names.keys, {} %>
  </div>

  <div class="field">
    <%= f.label :additional_regsidence %><br />
    <%= f.select :additional_residence_name, AdditionalResidence.additional_residence_names.keys, {} %>

  <div class="field">
    <%= f.label :sensation %><br />
    <%= f.select :sensation_name, Sensation.sensation_names.keys, {} %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
